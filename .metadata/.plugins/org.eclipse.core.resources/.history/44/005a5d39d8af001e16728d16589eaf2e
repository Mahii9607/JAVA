package com.jbk;

 class ArithmeticOperators {
    
     void performAddition(int operand1, int operand2) {
        int result = operand1 + operand2;
        System.out.println("Addition Result: " + result);
    }

     void performSubtraction(int operand1, int operand2) {
        int result = operand1 - operand2;
        System.out.println("Subtraction Result: " + result);
        System.out.println();
    }

     void performMultiplication(int operand1, int operand2) {
        int result = operand1 * operand2;
        System.out.println("Multiplication Result: " + result);
    }

    void performDivision(int operand1, int operand2) {
        if (operand2 != 0) {
            int result = operand1 / operand2;
            System.out.println("Division Result: " + result);
        } 
    }

    public void performModulus(int operand1, int operand2) {
        if (operand2 != 0) {
            int result = operand1 % operand2;
            System.out.println("Modulus Result: " + result);
        }
    }

    public static void main(String[] args) {
        ArithmeticOperators arithmetic = new ArithmeticOperators();
        arithmetic.performAddition(10, 20);
        arithmetic.performSubtraction(100, 20);
        arithmetic.performMultiplication(20, 10);
        arithmetic.performDivision(30, 2);
        arithmetic.performModulus(70, 90);
    }
}
